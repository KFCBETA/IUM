<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="16dp"
    android:paddingEnd="0dp">

    <ImageView
        android:id="@+id/navigation_header_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/navigation_header_username"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/navigation_header_image"
        app:layout_constraintBottom_toTopOf="@id/navigation_header_userTag"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/navigation_header_username"
        android:textSize="@dimen/navigation_header_username"
        android:gravity="center_vertical"
        android:textColor="@color/colorUserName"
        android:fontFamily="@font/roboto_condensed_family"/>

    <TextView
        android:id="@+id/navigation_header_userTag"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/navigation_header_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"
        android:text="@string/navigation_header_usertag"
        android:textSize="@dimen/navigation_header_usertag"
        android:textColor="@color/colorUserTag"/>

    <View
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:background="@color/colorShadow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"/>

</android.support.constraint.ConstraintLayout>