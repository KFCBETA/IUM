<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/welcomeActivity_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/welcomeActivity_headline"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/welcomeActivity_viewpager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/welcomeActivity_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:clipToPadding="true"
        android:overScrollMode="never"
        android:paddingStart="@dimen/viewpager_padding"
        android:paddingEnd="@dimen/viewpager_padding"
        android:paddingTop="@dimen/viewpager_padding"
        android:paddingBottom="@dimen/viewpager_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeActivity_headline" />


    <LinearLayout
        android:id="@+id/welcomeActivity_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/welcomeActivity_viewpager"
        app:layout_constraintEnd_toEndOf="@id/welcomeActivity_viewpager"
        app:layout_constraintStart_toStartOf="@id/welcomeActivity_viewpager"
        android:layout_marginBottom="20dp"/>

</android.support.constraint.ConstraintLayout>